{
  "name": "365-widgets",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "version": "1.0.0",
  "description": "365 Widgets Monorepo",
  "main": "index.js",
  "scripts": {
    "test": "jest",
    "cleanup": "rimraf packages/**/lib packages/**/dist packages/**/typings packages/**/bin packages/**/main packages/**/module packages/**/bin packages/**/*.tsbuildinfo packages/**/node_modules",
    "lint:rules": "eslint --fix . --ext .js --ext .jsx --ext .ts --ext .tsx",
    "lint:format": "prettier --write \"./**/**.{json,scss,css,html}\"",
    "lint": "run-s lint:*",
    "watch:typings": "tsc -b tsconfig.build.json --watch",
    "watch:packages": "lerna run --parallel --stream watch",
    "watch": "run-p watch:*",
    "build:typings": "tsc -b tsconfig.build.json",
    "build:packages": "lerna run --stream build",
    "build": "run-s cleanup build:*"
  },
  "keywords": [
    "365",
    "widgets"
  ],
  "author": "Zenon Trujillo",
  "license": "ISC",
  "devDependencies": {
    "@babel/cli": "^7.14.8",
    "@babel/core": "^7.14.8",
    "@babel/plugin-proposal-class-properties": "^7.14.5",
    "@babel/plugin-proposal-nullish-coalescing-operator": "^7.14.5",
    "@babel/plugin-proposal-numeric-separator": "^7.14.5",
    "@babel/plugin-proposal-object-rest-spread": "^7.14.7",
    "@babel/plugin-proposal-optional-chaining": "^7.14.5",
    "@babel/plugin-syntax-dynamic-import": "^7.8.3",
    "@babel/preset-env": "^7.14.8",
    "@babel/preset-typescript": "^7.14.5",
    "@babel/runtime": "^7.14.8",
    "@commitlint/cli": "^12.1.4",
    "@commitlint/config-conventional": "^12.1.4",
    "@rollup/plugin-babel": "^5.3.0",
    "@rollup/plugin-commonjs": "^19.0.1",
    "@rollup/plugin-node-resolve": "^13.0.2",
    "@types/jest": "^26.0.24",
    "@typescript-eslint/eslint-plugin": "^4.28.4",
    "@typescript-eslint/parser": "^4.28.4",
    "eslint": "^7.31.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-import": "^2.23.4",
    "eslint-plugin-prettier": "^3.4.0",
    "eslint-plugin-tree-shaking": "^1.9.2",
    "husky": "^7.0.1",
    "jest": "^27.0.6",
    "lerna": "^4.0.0",
    "npm-run-all": "^4.1.5",
    "regenerator-runtime": "^0.13.9",
    "rimraf": "^3.0.2",
    "rollup": "^2.53.3",
    "typescript": "^4.3.5"
  }
}
